<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/avtarImg"
        android:layout_width="51dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avtar" />

    <TextView
        android:id="@+id/fullnameText"
        android:layout_width="164dp"
        android:layout_height="17dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avtarImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/srnText"
        android:layout_width="165dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toEndOf="@+id/avtarImg"
        app:layout_constraintTop_toBottomOf="@+id/fullnameText" />

    <Button
        android:id="@+id/detailsBtn"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:layout_marginStart="68dp"
        android:text="@string/view_details"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/avtarImg"
        app:layout_constraintTop_toBottomOf="@+id/srnText" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>